@model List<Post>

<div class="card mt-3">
    <div class="card-header">
        <h5 class="card-title mb-0">
            Son Paylaşımlar
        </h5>
    </div>
    <div class="card-body">
        @foreach (var post in Model)
        {
        <div class="mb-3">
            <h6 class="mb-0">
                <a class="fw-medium" href="/posts/detail/@post.Url" style="color: #9c90ff">
                    @post.Title
                </a>
            </h6>
        </div>
        }
    </div>
</div>