<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="/css/style.css"/>

    <title>Document</title>
    
</head>
<body>
<nav class="navbar navbar-expand-lg bg-white shadow-sm">
    <div class="container">
        <a href="/posts" class="navbar-brand">
           <strong><h2 style="color: #762a88"><i class="bi bi-code"></i> BlogApp</h2></strong> 
        </a>
        
        <ul class="navbar-nav ms-auto">
            @if (User.Identity.IsAuthenticated)
            {
                
                <li class="nav-item">
                    <a style="color: #9c90ff" href="#" class="nav-link"><strong><h5>@User.Identity.Name</h5></strong></a>
                </li>
                <li class="nav-item">
                    <a style="color: #762a88" href="/users/logout" class="nav-link"><strong><h5>Logout</h5></strong></a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a style="color: #762a88" href="/users/login" class="nav-link"><strong>Login</strong></a>
                </li>
                <li class="nav-item">
                    <a style="color: #762a88" href="/users/Register" class="nav-link"><strong>Register</strong></a>
                </li>
            }
           
           

        </ul>
    </div>
</nav>
<div class="container mt-3">
    @RenderBody()
</div>
@await RenderSectionAsync("Scripts", required:false)
</body>
</html>