@model PostViewModel

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">
                Popüler Gönderiler
            </h1>
            @foreach (var post in Model.Posts)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img class="img-fluid rounded" src="~/img/@post.Image" alt="">
                        </div>
                        <div class="col-8">
                            <h5>
                                <a href="#" class="btn-link fw-bold">@post.Title</a>
                            </h5>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Harum, laudantium!</p>
                            <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold"> tagler burada</a>
                        </div>
                    </div>
                </div>
                <hr class="my-3"/>
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="">3</a>
                    </li>

                </ul>
            </nav>

        </div>
    </div>
    <div class="col-lg-4">

        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Tags</h5>
            </div>
            <div class="card-body">
                <ul class="list-inline d-flex flex-wrap gap-2">
                    @foreach (var tag in Model.Tags)
                    {
                        <li class="list-inline-item">
                            <a class="btn btn-outline-secondary btn-sm">@tag.Text</a>
                        </li>
                    }
                </ul>

            </div>
        </div>

    </div>
</div>