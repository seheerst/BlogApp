@model PostViewModel

<div class="row">
    <div class="col-lg-8">
         <div class="bg-white p-4 mb-3">
             <div>
                 @if (User.Identity.IsAuthenticated)
                 {
                     <strong> <p>Sende eğlenceli anlarını bizimle paylaş! <a href="/Post/Create" class="textColor">Gönderi Ekle</a></p></strong>

                 }
                 else
                 {
                     <strong> <p>Paylaşım yapmak için giriş yap! <a href="/Users/Login" class="textColor">Giriş Yap</a></p></strong>
                 }
             </div>
             </div>
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">
                Popüler Gönderiler
            </h1>
            @foreach (var post in Model.Posts)
            {
                <div class="card bg-transparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img class="img-fluid rounded" src="~/img/@post.Image" alt="">
                        </div>
                        <div class="col-8">
                            <h5>
                                <a href="/posts/detail/@post.Url" class="btn-link fw-bold">@post.Title</a>
                            </h5>
                            <p>@post.Description</p>
                            <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold"> tagler burada</a>
                        </div>
                    </div>
                </div>
                <hr class="my-3"/>
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item"><a class="page-link" href="">1</a></li>
                    <li class="page-item"><a class="page-link" href="">2</a></li>
                    <li class="page-item"> <a class="page-link" href="">3</a></li>
                </ul>
            </nav>

        </div>
    </div>
    <div class="col-lg-4">

        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>

    </div>
</div>