@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">@Model.Title</h1>
            <div class="tags">
                @foreach (var tag in Model.Tags)
                {
                    <a href="/posts/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-25 text-@tag.Color mb-2 fw-bold">@tag.Text</a>
                 
                }
               

            </div>
            <img src="~/img/@Model.Image" alt="" class="img-fluid rounded">
            <div>@Model.Content</div>
        </div>
        <div class="bg-white mt-3">
            <div class="card-border-0">
                <div class="card-header mx-3">
                    <h4 class="pt-3">@Model.Comments.Count() adet yorum var</h4>
                </div>
                <div class="card-body">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="my-4 mx-4 d-flex">
                            <img src="/img/@comment.User.Image" alt="" class="avatar rounded-circle float-start me-3">
                            <div>
                                <div class="mb-2">
                                    <h6>@comment.User.Name</h6>
                                </div>
                            <span>@comment.PublishedOn</span>
                            </div>
                        </div>
                        <p class="mx-5">@comment.Text</p>
                    }
                    <hr class="my-4">
                    <div class="px-4 pb-3">
                        <h4 class="mb-3">Yorum Ekle</h4>
                        <form method="post" action="/posts/AddComment">
                            <input type="hidden" name="PostId" value="@Model.PostId">
                            <div class="mb-3">
                                <label for="UserName" class="form-label">Kullanıcı Adı</label>
                                <input type="text" name="UserName" id="UserName" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label for="Text" class="form-label">Yorum</label>
                                <textarea rows="3" type="text" name="Text" id="Text" class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-danger mt-3">Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">

        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>

    </div>
</div>